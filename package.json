{
  "name": "svelte-webpack",
  "version": "1.0.0",
  "description": "A simple Svelte app made using Webpack",
  "main": "index.js",
  "scripts": {
    "delete:build": "rimraf build",
    "prebuild": "npm run delete:build",
    "start": "cross-env NODE_ENV=development webpack-dev-server",
    "build": "cross-env NODE_ENV=production webpack"
  },
  "keywords": [
    "svelte3",
    "routing",
    "webpack4"
  ],
  "author": "Ryan Dsouza",
  "license": "ISC",
  "devDependencies": {
    "crayon": "^1.6.10",
    "critters-webpack-plugin": "^2.3.0",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "dotenv-webpack": "^1.7.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "mini-css-extract-plugin": "^0.7.0",
    "preload-webpack-plugin": "^3.0.0-beta.3",
    "prettier": "^1.17.1",
    "rimraf": "^2.6.3",
    "style-loader": "^0.23.1",
    "svelte": "^3.4.4",
    "svelte-loader": "^2.13.4",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.4.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
